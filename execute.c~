#include "shell.h"

int execute_command(char **args)
{
    int status;
    pid_t pid;

    if (args == NULL || args[0] == NULL)
        return (1);

    if (is_builtin(args))
        return (execute_builtin(args));

    pid = fork();

    if (pid < 0)
    {
        perror("fork");
        return (-1);
    }

    if (pid == 0)
    {
        if (execve(args[0], args, environ) == -1)
        {
            perror("execve");
            exit(EXIT_FAILURE);
        }
    }
    else
    {
        waitpid(pid, &status, WUNTRACED);
    }

    return (1);
}
