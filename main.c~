#include "shell.h"

int main(void)
{
    char *line;
    char **args;
    int status;

    do {
        print_prompt();
        line = read_line();
        args = tokenize_line(line);
        status = execute_command(args);

        free(line);
        free_args(args);
    } while (status);

    return (0);
}
